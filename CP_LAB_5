exercise 2
#include<iostream>
using namespace std;
int main()
{
int x;
cout <<"Enter Number : ";
cin >> x;
if (x <= 10)
cout <<"Lower Class " << endl;
else if (x > 10 && x <= 20)
cout <<" Medium "<<endl;
else if (x > 20 && x <= 30)
cout <<"  High Class "<< endl;
else
cout <<"  Incorrect Value"<< endl;
}
