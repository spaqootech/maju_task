#include <iostream>
using namespace std;
main(){
int num;
cout<<"Enter a NUmber : ";
cin>>num;
if(num % 2 ==0){//reminder of 2 will be equal to 0
	cout<<num <<" is Even Number";//if even
}
else{
	cout<<num <<" is Odd Number";//if odd
}
}
