2
#include <iostream>
using namespace std;
main(){
int numOne , numTwo;
cout << "Enter First Number : ";
cin >> numOne;
cout << "\n Enter Second Number : ";
cin >> numTwo;
if(numOne > numTwo){
	cout << numOne <<" > "<<numTwo;
	cout << " \n Largest Number is "<<numOne;
	cout << " \n Smaller Number is "<<numTwo;
		}
else if(numOne < numTwo){
	cout << numOne <<" < "<<numTwo;
	cout << " \n Smaller Number is "<<numOne;
	cout << " \n Largest Number is "<<numTwo;
}
else{
	cout << numOne <<" = "<<numTwo;
}
}
//////////////////////////////////////////////////////////////////////////////////////////////////////////////
3
#include <iostream>
using namespace std;
main(){
int numOne , numTwo;
char op; // for operator which user inputs
cout << "Enter First Number : ";
cin >> numOne;
cout << "Enter Operator : ";
cin >> op;
cout << "Enter Second Number : ";
cin >> numTwo;
//Switch statement for operation
switch(op){
	case'+':
		cout << numOne<<" + "<<numTwo<<" = "<<numOne + numTwo;
		break;
	case'-':
		cout << numOne<<" - "<<numTwo<<" = "<<numOne - numTwo;
		break;
	case'*':
		cout << numOne<<" * "<<numTwo<<" = "<<numOne * numTwo;
		break;
	case'/':
		cout << numOne<<" / "<<numTwo<<" = "<<numOne / numTwo;
		break;
	default:
		cout <<"Cannot Calculate"<<numOne <<" , "<< numTwo;
		break;
}
}

