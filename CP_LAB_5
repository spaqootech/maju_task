#include<iostream>
using namespace std;
main()
{
int numOne , numTwo;
cout<<"Enter First Number : ";
cin>>numOne;
cout<<"Enter Second Number : ";
cin>>numTwo;
if(numOne % 3 == 0 && numTwo % 3 ==0){
	cout << "You have Entered multiples of 3";
}else{
	cout << "Random Numbers";
}
}
