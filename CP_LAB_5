x1
#include <iostream>
using namespace std;
main(){
	int num;
	cout<<"Enter a Number : ";
	cin >> num;
//	number is odd or even.
string odd_even = (num % 2 == 0)? "Even":"Odd";
//number is positive or negative.
string pos_neg = (num > 0)? "Positive":"Negative";
cout << num << " is "<< odd_even << " and "<< pos_neg << " . ";
}

